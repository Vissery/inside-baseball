; SCRP 3 PlayMusic

parameter music
parameter arg1

if (gNoMusic) {
    free-running-script 0
}
if (!arg1) {
    free-running-script PlayMusicPool
}
if (music == 1) {
    xb7-xfe
    xb7-x4b "Tried to play song 1"
    free-running-script 0
}
if (music == 0) {
    sound-select gCurrentMusic
    sound-channel 0
    sound-play
} else {
    sound-select music
    sound-channel 0
    sound-play
    gCurrentMusic = music
}
free-script
