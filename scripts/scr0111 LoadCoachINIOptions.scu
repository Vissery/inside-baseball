; SCRP 111 LoadCoachINIOptions

local variable local0
local variable local1

local0 = read-ini-int gCoachINIPath "general" "options"
gNoCommentary = local0 & 1
gNoGooch = (shr local0 1) & 1
gNoMusic = (shr local0 2) & 1
gNoBackgroundSound = (shr local0 3) & 1
gNoPlayerTalking = (shr local0 4) & 1
gNoPlayerChatter = (shr local0 5) & 1
local1 = (shr local0 6) & 1
if (local1) {
    gGameInputDevice = INPUT-DEVICE-GAME-PAD
} else {
    gGameInputDevice = INPUT-DEVICE-MOUSE
}
free-script
