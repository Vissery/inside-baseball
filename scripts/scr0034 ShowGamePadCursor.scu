; SCRP 34 ShowGamePadCursor

if (!gGamePadCursorSprite) {
    gGamePadCursorSprite = call-script FindFreeSprite []
    sprite-set-range gGamePadCursorSprite gGamePadCursorSprite
    sprite-clear
    sprite-set-image gCursorImage
    sprite-set-hotspot gGamePadX gGamePadY
    sprite-x2b 21000
    sprite-x52 0
    sprite-x7c 0
    sprite-x7d [160]
    cursor-hide
    run-script GamePadCursorLoop []
}
free-script
