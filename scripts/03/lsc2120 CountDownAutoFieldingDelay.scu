; LSC2 3 2120 CountDownAutoFieldingDelay

do {
    stop-script
    if (rAutoFieldeingDelay) {
        --rAutoFieldeingDelay
    }
    if (g_nitrogen_vector_is_set) {
        rAutoFieldeingDelay = 0
    }
} until (rAutoFieldeingDelay < 1 || (gUserSelectedPlay in [BALL-SHADOW]) && gBallHasBounced)
rAutoFieldeingDelay = 0
free-script
