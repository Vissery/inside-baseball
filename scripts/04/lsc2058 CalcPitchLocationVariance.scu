; LSC2 4 2058 CalcPitchLocationVariance

local variable result
local variable local1
local variable local2

if (rPitchKind == PITCH-INTENTIONAL-WALK) {
    result = 0
    return result
} else {
    local2 = gKidData[rPitcherKid][rPitchKind]
}
result = (100 - local2) / 2
local1 = gKidData[rPitcherKid][KD-fatigue]
result = result + local1 * result / 100
result = (100 - local2 + local1) / 2
if (result < 20) {
    result = 20
}
if (result > 96) {
    result = 96
}
return result
free-script
