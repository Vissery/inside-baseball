; SCRP 301 NetHandleRunnerMessage

parameter arg0
parameter arg1
parameter arg2

case arg0 {
    of 14 {
        gTeamInfo[gBattingTeamInfoIndex][TI-RUNS] = gTeamInfo[gBattingTeamInfoIndex][TI-RUNS] + 1
        if (gNetplayActive) {
            run-script smth_net_stats_kludge [0]
        }
    }
    of 20 {
        if (gCurrentRoom == 3) {
            run-script 2076 [1, arg1, arg2]
        }
    }
    else {
        pop-discard 0
    }
}
free-script
