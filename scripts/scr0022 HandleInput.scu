; SCRP 22 HandleInput

parameter type: InputType
parameter key: char
parameter arg2
parameter x
parameter y

if (type == INPUT-TYPE-KEYBOARD) {
    if (!gKeyHandlerScript) {
        pop-discard 0
    } else if (gKeyHandlerScript != 0) {
        run-script gKeyHandlerScript [key]
    }
} else if (!gMouseHandlerScript) {
    pop-discard 0
} else if (gMouseHandlerScript != 0) {
    run-script gMouseHandlerScript [key, x, y, arg2]
}
free-script
